<?php

//Modifie le mot de passe d'un utilisateur
function modifie_mdp($login, $new_pass){
	global $bdd;
	$login = (string) $login;
	$pass = (string) $new_pass;

	$req = $bdd->prepare('UPDATE membre SET pass_md5 = :new_pass WHERE login = :login');
	$req->bindParam(':login', $login, PDO::PARAM_STR);
	$req->bindParam(':new_pass', $new_pass, PDO::PARAM_STR);
	$req->execute();
	$result = $req->fetch();

	return $result;
}
