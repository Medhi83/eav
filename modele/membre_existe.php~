<?php

//Retourne Vrai si un nom d'utilisateur existe dans la table membre
function membre_existe($login){
	global $bdd;
	$login = (string) $login;

	$req = $bdd->prepare('SELECT COUNT(*) FROM membre WHERE login= :login');
	$req->bindParam(':login', $login, PDO::PARAM_STR);
	$req->execute();
	$result = $req->fetch();
	
	if ($result[0] != 1) $result = true;
	else $result = false;
	
	return $result;
}
