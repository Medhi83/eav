<?php

//Retourne le nombre de membres correspondant au couple username/password
function nb_membre($login, $pass){
	global $bdd;
	$login = (string) $login;
	$pass = (string) $pass;
		
	$req = $bdd->prepare('SELECT COUNT(*) FROM membre WHERE login= :login AND pass_md5= :pass');
	$req->bindParam(':login', $login, PDO::PARAM_STR);
	$req->bindParam(':pass', $pass, PDO::PARAM_STR);
	$req->execute();
	$result = $req->fetchAll();
	
	
	return $result;
}
